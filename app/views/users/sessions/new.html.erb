<div class="">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="wrapper fadeInDown m-auto">
  <div id="formContent">
    <div class="fadeIn first">
      <div class="container">
        <br>
        <p class="text-3xl"> Welcome BackðŸ‘‹  </p>
        <hr/>
      </div>
    </div>

    <div class="field" name="login" placeholder="login" id="login">
      <%= f.email_field :email, autocomplete: 'email', placeholder:' email', class:"fadeIn third widerTextField border border-4  inputText" %>
    </div>


    <br/>
    <div class="field" id="password" name="login" >
      <%= f.password_field :password, autocomplete: 'password', placeholder:'password', class:"field fadeIn fourth widerTextField border border-4  inputText" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <br/>
      <div class="field fadeIn fifth">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions fadeIn sixth">
      <%= f.submit "Log in", id:"formBtn" %>
    </div>
    <% end %>

    <div id="formFooter" class="fadeIn seventh">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>

</div>
