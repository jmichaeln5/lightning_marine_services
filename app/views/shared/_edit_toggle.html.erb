<% if display_edit_toggle? %>
  <div class="container p-2">
    <button class="btn btn-outline-secondary" type="button" data-toggle="collapse" data-target="#collapseEditToggle" aria-expanded="false" aria-controls="collapseEditToggle">
      <%= "Edit #{current_controller.capitalize.singularize}" %>
    </button>
  </div>

  <div class="collapse " id="collapseEditToggle">
    <br>
    <div class="card card-body">
      <div class="">
        <button class="btn btn-outline-secondary float-right" type="button" data-toggle="collapse" data-target="#collapseEditToggle" aria-expanded="false" aria-controls="collapseEditToggle">
          x
        </button>
      </div>
      <div class="text-4xl font-semibold">
        Edit <%= "#{current_controller.capitalize.singularize}" %>
        <%= "Name" unless current_controller == 'orders' %>
      </div>
      <hr>

      <% form_path = "#{controller_name}/form".to_s %>

      <%= render form_path %>

      <div class="container">

        <% if current_user.has_role? :admin %>
          <br>
          <span class="pt-4">
            <%= link_to 'Delete', get_resource(controller_name).find(params[:id]), method: :delete, data: { confirm: "Are you sure you want to delete this #{current_controller.singularize}? Once deleted this cannot be undone." }, class:'btn btn-sm btn-outline-danger' %>
          </span>
          <br>

        <% end %>
        <br>

        <button class="btn btn-outline-secondary btn-sm" type="button" data-toggle="collapse" data-target="#collapseEditToggle" aria-expanded="false" aria-controls="collapseEditToggle">
          Close
        </button>

      </div>



    </div>
  </div>
<% end %>
