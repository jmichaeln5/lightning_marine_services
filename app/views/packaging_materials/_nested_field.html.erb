<%= tag.span data: { controller: 'click-hidden toggle', "toggle-target": "toggleable", "css-class": "hidden"  } do %>
  <!-- <li> -->
    <div class="bg-gray-50 py-3 flex justify-around text-xs">
      <%= local_assigns[:form].hidden_field :id %>
      <div>
        <%= local_assigns[:form].label :type, 'Type', class: "font-medium" %>
        <br>
        <% select_type_css = "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 text-xs shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" %>
        <% if params[:type] or @type %>
          <% @type ||= (params[:type].in? PackagingMaterial::Packageable::TYPES) ? params[:type] : 'PackagingMaterial::Other' %>
          <%= local_assigns[:form].select :type,
            PackagingMaterialDecorator.types_options,
            { selected: @type },
            { class: select_type_css } %>
        <% else %>
          <%= local_assigns[:form].select :type,
            PackagingMaterialDecorator.types_options,
            {},
            { class: select_type_css } %>
        <% end %>
      </div>
      <div>
        <%= local_assigns[:form].label :description, "Description", class: "font-medium" %>
        <br>
        <%= local_assigns[:form].text_field :description,
          class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 text-xs shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600",
          placeholder: 'e.g. OV' %>
      </div>
      <div class="justify-self-start">
        <div>
          <%= local_assigns[:form].check_box :_destroy, data: {"click-hidden-target": "clickable" }, class: "hidden" %>
           <button type="button"
            data-action="click->click-hidden#clickElement click->toggle#toggle"
            class="mt-3 sm:mt-3.5 font-medium inline-flex items-center gap-x-1.5 rounded-md bg-red-100 px-2.5 py-1.5 text-red-700 shadow-sm hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="-ml-0.5 h-5 h-5 text-xs">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  <!-- </li> -->
<% end %>
