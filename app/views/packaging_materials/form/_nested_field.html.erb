<%#= tag.div '/packaging_materials/nested_field', class:"block w-full font-bold my-3 text-sm" %>

<%= local_assigns[:nested_field].hidden_field :id %>
<div class="bg-gray-50 py-1.5 flex justify-around">
  <div class="mx-auto">
    <%= local_assigns[:nested_field].label :type, 'Type', class: "text-xs font-medium" %>
    <br>
    <%= local_assigns[:nested_field].select :type, PackagingMaterialDecorator.types_options, {selected: @type}, { class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm"} %>
  </div>
  <div class="mx-auto">
    <%= local_assigns[:nested_field].label :description, "Description", class: "text-xs font-medium" %>
    <br>
    <%= local_assigns[:nested_field].text_field :description, data: { "nested-form-target": "descriptionField"}, class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm", placeholder: 'e.g. OV' %>
  </div>
  <div class="mx-auto justify-self-start">
    <br>
    <%= local_assigns[:nested_field].check_box :_destroy, class: "hidden" %>
    <button type="button" data-nested-form-target="removeNestedFieldBtn" data-action="click->nested-form#remove_association" class="flex align-middle text-red-400 hover:text-red-600 hover:scale-105 mt-1 w-auto cursor-pointer">
      <div class="inline-flex">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
      </div>
      <div class="ml-1.5 inline-flex">
        <%= tag.div "Remove" %>
      </div>
    </button>
  </div>
</div>
