<%= render partial: "/application/append_flash_notice", locals: { notice: notice} if notice %>
<%= tag.div id: statusable.statusable_dom_id, class: "inline-block w-full" do %>
  <%= tag.div class: "inline-block" do %>
    <%= tag.div class: "cursor-default inline-flex justify-items-center" do %>
      <%= status_badge statusable.status, "rounded-full text-base px-3 py-1.5"  %>
    <% end %>
    <% if authorized_internal_user? %>
      <%= tag.div do %>
        <%= turbo_frame_tag statusable.edit_statusable_dom_id, class: "w-full inline-flex justify-center" do %>
          <%= link_to 'edit', edit_status_path(
          statusable,
          params: { statusable_id: statusable.id, statusable_type: statusable.statusable_type},
          ), class: "text-sm text-gray-400 underline underline-offset-2 hover:text-gray-600 hover:underline" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
