<%= turbo_frame_tag dom_id(@order, :thumbnail) do %>
  <div class="grid grid-cols-2 space-3">
    <div class="p-2 m-1 rounded-md hover:bg-gray-50">
      <div class="mb-1">
        <div class="text-sm font-medium text-gray-600">
          Status
        </div>
        <div class="text-xs font-medium text-gray-500">
          <%= render partial:"/statuses/status", locals: { statusable: @order, allow_edit_status: false } %>
        </div>
      </div>
    </div>
    <% order_decorator = OrderDecorator.new(@order) %>
    <div class="p-2 m-1 rounded-md hover:bg-gray-50">
      <div class="mb-1">
        <div class="text-sm font-medium text-gray-600">
          PO/Tracking Number
        </div>
        <div class="text-xs font-medium text-gray-500">
          <%= order_decorator.return_attr_or_str(:po_number, 'n/a') %>
        </div>
      </div>
    </div>
    <div class="p-2 m-1 rounded-md hover:bg-gray-50">
      <div class="mb-1">
        <div class="text-sm font-medium text-gray-600">
          Date Recieved:
        </div>
        <div class="text-xs font-medium text-gray-500">
          <%= order_decorator.return_attr_or_str(:date_recieved, 'n/a') %>
        </div>
      </div>
    </div>
    <div class="p-2 m-1 rounded-md hover:bg-gray-50">
      <div class="mb-1">
        <div class="text-sm font-medium text-gray-600">
          Date Delivered:
        </div>
        <div class="text-xs font-medium text-gray-500">
          <%= order_decorator.return_attr_or_str(:date_delivered, 'n/a') %>
        </div>
      </div>
    </div>
    <div class="p-2 m-1 rounded-md hover:bg-gray-50">
      <div class="mb-1">
        <div class="text-sm font-medium text-gray-600">
          Courrier:
        </div>
        <div class="text-xs font-medium text-gray-500">
          <%= order_decorator.return_attr_or_str(:courrier, 'n/a') %>
        </div>
      </div>
    </div>
    <div class="p-2 m-1 rounded-md hover:bg-gray-50">
      <div class="mb-1">
        <div class="text-sm font-medium text-gray-600">
          Dept:
        </div>
        <div class="text-xs font-medium text-gray-500">
          <%= order_decorator.return_attr_or_str(:dept, 'n/a') %>
        </div>
      </div>
    </div>
  </div>
  <% if Current.request_variant == :turbo_frame  %>
    <div class="w-full bg-gray-50 py-3">
      <div class="text-center ">
        <%= link_to "View order", @order, method: :get, target: '_top', class: "hover:bg-gray-50 text-md font-medium text-cyan-700 hover:text-cyan-900 hover:cursor-pointer" %>
      </div>
    </div>
  <% end %>
<% end %>
