<% table_section_heading_title ||= nil %>
<% table_section_heading_description ||= nil %>
<% table_title ||= nil %>
<% table_description ||= nil %>

<%= render partial: "/orders/table/section_heading", locals: {
  table_section_heading_title: table_section_heading_title,
  table_section_heading_description: table_section_heading_description,
  table_turbo_frame_tag: table_turbo_frame_tag,
} %>

<div class="rounded-md bg-white">
  <div class="pt-7 w-full px-4 sm:px-6 lg:px-8 ">
    <%= turbo_frame_tag table_turbo_frame_tag do %>
      <section class="mb-5">
        <%= render partial: "/orders/table/heading", locals: {
          table_title: table_title,
          table_description: table_description,
          pagy: pagy,
          table_turbo_frame_tag: table_turbo_frame_tag,
        } %>
      </section>
      <div class="min-w-full flex flex-wrap text-center sm:justify-between">
        <div class="w-full sm:w-auto">
          <p class="text-sm text-gray-700 inline-block align-baseline">
            Showing
            <span class="font-medium"><%= pagy.from %></span>
            to
            <span class="font-medium"><%= pagy.to %></span>
            of
            <span class="font-medium"><%= pagy.count %> </span>
            results
          </p>
        </div>
        <div class="w-full sm:w-auto">
          <div class="inline-block align-baseline">
            <%== pagy_nav pagy %>
          </div>
        </div>
      </div>
      <div class="overflow-x-auto flow-root rounded-lg shadow">
        <div class="min-w-full min-h-full">
          <div class="table min-w-full border border-slate-50">
            <div class="table-header-group">
              <div class="table-row">
                <%= render partial: "/orders/table/thead" %>
              </div>
            </div>
            <div class="table-row-group">
              <%= render partial: "/orders/table/row", collection: orders, as: :order %>
            </div>
          </div>
        </div>
      </div>
      <div class="py-3 text-center">
        <%== pagy_nav pagy %>
      </div>
    <% end %>
  </div>
</div>
