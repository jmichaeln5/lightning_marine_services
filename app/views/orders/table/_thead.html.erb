      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
      </svg>
    <% end %>
  <% end %>
<% end %>
<%= tag.div 'Content', class: table_header_css_classes.gsub("px-3.5", "px-5") %>
<%= tag.div class: table_header_css_classes do %>
  <%= tag.div class: "group inline-flex p-3" do %>
    <%= sort_link_to "Courrier", :courrier, class: sort_link_to_table_header_css_classes, data: { turbo_action: "advance" } %>
    <%= tag.span class: "ml-2 rounded bg-gray-100 text-gray-900" do %>
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
      </svg>
    <% end %>
  <% end %>
<% end %>
<%= tag.div class: table_header_css_classes.gsub("px-3.5", "pr-1.5") do %>
  <%= tag.div class: "group inline-flex p-3" do %>
    <%= sort_link_to "Date Delivered", :date_delivered, class: sort_link_to_table_header_css_classes, data: { turbo_action: "advance" } %>
    <%= tag.span class: "ml-2 rounded bg-gray-100 text-gray-900" do %>
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
