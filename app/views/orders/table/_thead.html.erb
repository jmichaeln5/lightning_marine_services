<% table_header_css_classes = "table-cell inline-block px-3.5 py-3 whitespace-nowrap align-middle text-sm leading-4 font-[420] text-gray-900" %>
<% sort_link_to_table_header_css_classes = "inline-block mx-auto mt-0.5 text-indigo-800 align-middle leading-4 font-medium hover:text-indigo-900 hover:underline" %>
<%= tag.div class: table_header_css_classes.gsub("px-3.5", "py-3.5 pr-3 pl-4") %> <%# NOTE 👈🏾  placeholder for first col %>
<%= tag.div class: table_header_css_classes do %>
  <%= tag.div class: "group inline-flex p-3" do %>
    <%= sort_link_to "ID", :id, class: sort_link_to_table_header_css_classes, data: { turbo_action: "advance" } %>
    <%= tag.span class: "ml-2 rounded bg-gray-100 text-gray-900" do %>
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
      </svg>
    <% end %>
  <% end %>
<% end %>
<%= (tag.div 'Order Sequence', class: table_header_css_classes.gsub("whitespace-nowrap", "text-center")) unless @vendor %>
<%= tag.div 'Dept', class: table_header_css_classes.gsub("py-3", "text-center ") %>
<% if controller_path.include? "purchaser" %>
  <%= tag.div "Ship", class: table_header_css_classes %>
<% else %>
  <%= tag.div class: table_header_css_classes do %>
    <%= tag.div class: "group inline-flex p-3" do %>
      <%= sort_link_to "Ship", :ship_name, class: sort_link_to_table_header_css_classes, data: { turbo_action: "advance" } %>
      <%= tag.span class: "ml-2 rounded bg-gray-100 text-gray-900" do %>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<% if controller_path.include? "vendor" %>
  <%= tag.div "Vendor", class: table_header_css_classes %>
<% else %>
  <%= tag.div class: table_header_css_classes do %>
    <%= tag.div class: "group inline-flex p-3" do %>
      <%= sort_link_to "Vendor", :vendor_name, class: sort_link_to_table_header_css_classes, data: { turbo_action: "advance" } %>
      <%= tag.span class: "ml-2 rounded bg-gray-100 text-gray-900" do %>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= tag.div 'PO/Tracking Number', class: table_header_css_classes %>
<%= tag.div class: table_header_css_classes do %>
  <%= tag.div class: "group inline-flex p-3" do %>
    <%= sort_link_to "Date Recieved", :date_recieved, class: sort_link_to_table_header_css_classes, data: { turbo_action: "advance" } %>
