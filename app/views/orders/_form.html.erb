<!-- https://tailwindui.com/components/application-ui/forms/form-layouts#component-30dffb06e58cdbe872820ed3f943d85a -->
<% css_form_label = "block text-sm font-medium leading-6 text-gray-900" %>
<% css_form_text_field = "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
<div class="mx-auto">
  <div class="rounded-md bg-white">
    <div class="flex-1 mx-auto max-w-8xl">
      <article>
        <%= form_with model: order, id: "order_form" do |form| %>
          <%= render partial: "/layouts/stacked_shell/headings/form_errors", locals: {
            form: form,
          } if form.object.errors.any? %>
          <section>
            <div class="flex justify-between mt-3 mb-5">
              <div>
                <h3 class="text-base font-semibold leading-6 text-gray-900">Order Form</h3>
                <p class="mt-1 text-sm text-gray-500">Add information about the order below.</p>
              </div>
              <div>
               <%= link_to "Delete", order, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this order? Once deleted it cannot be recovered." }, class:"inline-flex items-center rounded border border-transparent bg-red-100 px-2.5 py-1.5 text-xs font-medium text-red-700 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" if current_user.has_role?('admin') && !order.new_record? %>
              </div>
            </div>
            <section id="order-form-fields">
              <fieldset id="main-order-form-fields" class="my-6 grid grid-cols-1 sm:grid-cols-6 gap-y-6 gap-x-4">
                <div class="sm:col-span-6">
                  <%= form.label :order_sequence, class: css_form_label %>
                  <div class="mt-1">
                    <%= form.text_field :order_sequence, class: css_form_text_field %>
                  </div>
                </div>
                <div class="sm:col-span-3">
                  <legend><%= form.label :purchaser_id, 'Ship', class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.select :purchaser_id, Purchaser.all.order(:name).collect  { |purchaser| [ purchaser.name, purchaser.id ] }, {}, { class: "block w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
                  </div>
                </div>
                <div class="sm:col-span-3">
                  <legend><%= form.label :vendor_id, 'Vendor', class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.select :vendor_id, Vendor.all.order(:name).collect  { |vendor| [ vendor.name, vendor.id ] }, {}, { class: "block w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
                  </div>
                </div>
                <div class="sm:col-span-6">
                  <legend><%= form.label :dept, class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.text_field :dept, class: css_form_text_field %>
                  </div>
                </div>
                <div class="sm:col-span-6">
                  <legend><%= form.label :po_number, "PO/Tracking Number", class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.text_field :po_number, class: css_form_text_field %>
                  </div>
                </div>
                <div class="sm:col-span-6">
                  <legend><%= form.label :courrier, class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.text_field :courrier, class: css_form_text_field %>
                  </div>
                </div>
                <div class="sm:col-span-3">
                  <legend><%= form.label :date_recieved, "Date recieved", class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.date_field :date_recieved, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class:"block w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                  </div>
                </div>
                <div class="sm:col-span-3">
                  <legend><%= form.label :date_delivered, "Date delivered", class: css_form_label %></legend>
                  <div class="mt-1">
                    <%= form.date_field :date_delivered, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class:"block w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                  </div>
                </div>
              </fieldset>
              <fieldset id="order-attachments-field">
                <legend><%= form.label :images, "Attachments", class: css_form_label %></legend>
                <div class="mt-1">
                  <div class="p-3 w-full rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6">
                    <div class="flex justify-center ">
                      <div class="space-y-1 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="flex text-sm text-gray-600">
                          <label for="order_images" class="relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500">
                            <span>Click here to upload an attachment</span>
                            <%= form.file_field :images, multiple: true, class: 'hidden' %>
                          </label>
                        </div>
                        <p class="text-xs text-gray-500">Accepts PNG, JPG, JPEG</p>
                      </div>
                    </div>
                  </div>
                </div>
              </fieldset>
              <fieldset id="order-order-content-fields">
                <div class="block my-6 hover:cursor-default">
                  <div class="w-full relative">
                    <div class="absolute inset-0 flex items-center" aria-hidden="true">
                      <div class="w-full border-t border-gray-200"></div>
                    </div>
                    <div class="relative flex justify-center">
                      <span class="bg-white px-2 text-sm text-gray-400">Order Content Details</span>
                    </div>
                  </div>
                </div>
                <div class="block my-6 w-full">
                  <article>
                    <%= render partial: '/orders/order_content_fields', locals: { form: form, order: local_assigns[:order]} %>
                    <div id="order_content" class="mb-2">
                      <%= render partial: "/orders/order_contents/order_content", locals: { order_content: order_content } %>
                    </div>
                    <%#= render partial: '/order_contents/packaging_materials/form', locals: { form: form, order_content: order_content } %>
                    <!-- <%# unless @order.new_record? %>
                      <%#= turbo_frame_tag @order_content, src: edit_order_content_path(@order_content) do %>
                        <div class="w-full h-14 bg-gray-50 text-center">
                          Loading order content...
                        </div>
                      <%# end %>
                    <%# end %> -->
                  </article>
                </div>
              </fieldset>
            </section>
          </section>
          <section class="form-submission">
            <% if Current.request_variant == :turbo_frame %>
              <div class="block border-t border-gray-200">
                <div class="mt-6 grid justify-items-end">
                  <div class="flex space-x-3">
                    <button type="button" name="button" data-action="turbo-modal#hideModal" class="rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                      Cancel
                    </button>
                    <%#= form.submit "#{submit_button_text}", data: { turbo: false }, class: 'hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
                    <%#= form.submit "#{submit_button_text}", data: { turbo: true }, class: 'hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
                    <%= form.submit "#{order.new_record? ? 'Create new order' : 'Save changes'}", data: {turbo: true }, class: 'inline-flex hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="block my-3 border-t border-gray-200">
                <div class="mt-6">
                    <%= form.submit "#{order.new_record? ? 'Create new order' : 'Save changes'}", data: {turbo: true }, class: 'inline-flex hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
                </div>
              </div>
            <% end %>
          </section>
        <% end %>
      </article>
    </div>
  </div>
</div>
