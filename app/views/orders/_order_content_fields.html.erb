<%= local_assigns[:form].fields_for :order_content, local_assigns[:order_content] do |order_content_form| %>
  <div class="order_content_form block my-6 w-full">
    <article>
      <div class="block my-6 hover:cursor-default">
        <div class="w-full relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="bg-white px-2 text-sm text-gray-400">Packaging materials</span>
          </div>
        </div>
      </div>
      <section>
        <%#= tag.span data: {"controller": "nested-form" }, class:"block w-full" do %>
          <%#= tag.div data: {"nested-form-target": "add_item" } do %>
            <%#= link_to "Add packaging material", "#", data: { action: "nested-form#add_association" }, class: "inline-block w-full mb-3 cursor-pointer rounded-md py-2 px-3 text-center text-sm font-semibold leading-6 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 text-indigo-500 hover:text-indigo-600 ring-1 ring-inset ring-indigo-200 hover:ring-indigo-300" %>
          <%# end %>
          <%#= tag.template data: {"nested-form-target": "template" } do %>
            <%#= order_content_form.fields_for :packaging_materials, PackagingMaterial.new, child_index: 'TEMPLATE_RECORD' do |ff| %>
              <%#= render partial: "/orders/order_contents/packaging_materials_fields", locals: {
                nested_field: ff,
              } %>
            <%# end %>
          <%# end %>
          <%#= order_content_form.fields_for :packaging_materials do |ff| %>
            <%#= render partial: "/orders/order_contents/packaging_materials_fields", locals: {
              nested_field: ff,
            } %>
          <%# end %>
          <%##= tag.div data: {"nested-form-target": "add_item" } do %>
            <%##= link_to "Add packaging material", "#", data: { action: "nested-form#add_association" }, class: "inline-block w-full mb-3 cursor-pointer rounded-md py-2 px-3 text-center text-sm font-semibold leading-6 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 text-indigo-500 hover:text-indigo-600 ring-1 ring-inset ring-indigo-200 hover:ring-indigo-300" %>
          <%## end %>
        <%# end %>

        <%= tag.div class:"block w-full" do %>
          <%#= render partial:"/order_contents/packaging_materials/radio_button_packaging_material_types_cards" %>
          <%= render partial:"/packaging_materials/form/add_nested_field", locals: {
            order_content: local_assigns[:order_content],
            order_content_form: order_content_form,
          } %>
        <% end %>
      </section>
    </article>
  </div>
<% end %>
