<% css_form_label = "inline-block align-middle text-sm font-medium leading-6" %>
<% css_form_text_field = "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
<%= form_with model: order_content, id: "order_content_form" do |form| %>
  <% if form.object.errors.any? %>
    <%= tag.div class: "w-full h-auto mb-6" do %>
      <%= render partial: "/layouts/stacked_shell/headings/form_errors", locals: {
        form: form,
      } %>
    <% end %>
  <% end %>
  <div>
    <!-- Old order_content old attrs: order_content.box; order_content.crate; order_content.pallet; -->
    <fieldset>
      <div class="grid grid-cols-3 gap-3">
        <div class="flex w-full">
          <div class="mt-1">
            <%= form.label :box, 'Boxes', class: css_form_label %>
          </div>
          <div class="w-full pl-3 sm:pl-1">
            <%= form.text_field :box, data: { controller: "number-field-input", action: "number-field-input#rejectLetters"}, class: css_form_text_field%>
          </div>
        </div>
        <div class="flex w-full">
          <div class="mt-1">
            <%= form.label :pallet, 'Pallets', class: css_form_label %>
          </div>
          <div class="w-full pl-3 sm:pl-1">
            <%= form.text_field :pallet, data: { controller: "number-field-input", action: "number-field-input#rejectLetters"}, class: css_form_text_field%>
          </div>
        </div>
        <div class="flex w-full">
          <div class="mt-1">
            <%= form.label :crate, 'Crates', class: css_form_label %>
          </div>
          <div class="w-full pl-3 sm:pl-1">
            <%= form.text_field :crate, data: { controller: "number-field-input", action: "number-field-input#rejectLetters"}, class: css_form_text_field%>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
  <fieldset class="my-6">
    <h1 class="ml-2 text-2xl font-semibold leading-6 text-gray-900">
      Packaging materials
    </h1>
    <div class="mx-auto">
      <%= form.fields_for :packaging_materials, local_assigns[:order_content].packaging_materials do |packaging_material_form| %>
        <div class="mt-3 flex space-x-3">
          <div class="inline-flex">
            <%= packaging_material_form.label :type, 'Type', class: "text-sm font-medium leading-6 pr-3 " %>
            <%= packaging_material_form.select :type, [['Box', 'PackagingMaterial::Box'], ['Crate', 'PackagingMaterial::Crate'], ['Pallet', 'PackagingMaterial::Pallet'], ['Other', 'PackagingMaterial']], {}, { class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
          </div>
          <div class="inline-flex">
            <%= packaging_material_form.label :description, "Description", class: "text-sm font-medium leading-6 pr-3 " %>
            <%= packaging_material_form.text_field :description, class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
          <div class="inline-flex">
            <%= packaging_material_form.label :_destroy, class: "text-sm font-medium leading-6 pr-3 " %>
            <%= packaging_material_form.check_box :_destroy, class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      <% end %>
    </div>
  </fieldset>
  <%= form.submit "#{order_content.new_record? ? 'Create order content' : 'Save changes' }", class: 'inline-flex hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-5 text-md font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
<% end %>
