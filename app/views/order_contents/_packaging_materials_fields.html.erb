<%= form_with model: [order_content, packaging_material] do |form| %>
  <div class="my-3">
    <%= render partial: "/layouts/stacked_shell/headings/form_errors", locals: {
      form: form,
    } if form.object.errors.any? %>
  </div>
  <% css_form_label = "block text-sm font-medium leading-6 text-gray-900" %>
  <% css_form_text_field = "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  <div class="m-auto grid grid-rows-1 gap-y-3">
    <div>
      <%= form.label :type, 'Packaging material type', class: css_form_label %>
      <div class="mt-1">
        <%= form.select :type, [['Box', 'PackagingMaterial::Box'], ['Crate', 'PackagingMaterial::Crate'], ['Pallet', 'PackagingMaterial::Pallet'], ['Other', 'PackagingMaterial']], {}, { class: "block w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
      </div>
    </div>
    <div>
      <%= form.label :description, "Description", class: css_form_label %>
      <div class="mt-1">
        <%= form.text_area :description, rows: 3, class: "block w-full rounded-md border-0 shadow-sm placeholder:text-gray-400 sm:py-1.5 sm:text-sm sm:leading-6 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600" %>
      </div>
      <%= content_tag :p, "Write a few details about the packaging material.", class: "mt-2 text-sm text-gray-500" %>
    </div>
    <div class="my-6">
      <%= form.submit "#{packaging_material.new_record? ? 'Create new packaging material' : 'Save changes'}", data: {turbo: true }, class: 'inline-flex hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
    </div>
  </div>
<% end %>
