<%= form.fields_for :packaging_materials, local_assigns[:order_content].packaging_materials do |packaging_material_form| %>
  <div class="mt-3 flex space-x-3">
    <div class="inline-flex">
      <%= packaging_material_form.label :type, 'Type', class: "text-sm font-medium leading-6 pr-3 " %>
      <%= packaging_material_form.select :type, PackagingMaterial.types_options, {}, { class: "block w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
    </div>
    <div class="inline-flex">
      <%= packaging_material_form.label :description, "Description", class: "text-sm font-medium leading-6 pr-3 " %>
      <%= packaging_material_form.text_field :description, class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
    <div class="inline-flex">
      <%= packaging_material_form.label :_destroy, 'Remove', class: "text-sm font-medium leading-6 pr-3 " %>
      <%= packaging_material_form.check_box :_destroy, class: "hover:cursor-pointer rounded-md border-0 p-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>
<% end %>
