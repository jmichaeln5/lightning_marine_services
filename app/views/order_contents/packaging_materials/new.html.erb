<% content_for :page_heading_button do %>
  <%= render partial: "/layouts/stacked_shell/headings/buttons/back_btn_with_fallback", locals: {
    fallback_location: @order_content,
    fallback_location_text: "View order content",
  } %>
<% end %>
<%= tag.h1 "New packaging material#{(params[:type].in? PackagingMaterial::Packageable::HUMANIZED_TYPES) ? (' (' + params[:type].downcase + ')' ) : ''}" %>
<turbo-frame id="new_packaging_material">
<div class="w-full">
  <%= form_with model: [@order_content, @packaging_material] do |form| %>
    <div class="w-full">
      <% if form.object.errors.any? %>
        <div data-controller="notification" data-notification-delay-value="5000" class="w-full p-4 rounded-md bg-red-100 mb-3" id="msg-container">
          <div class="text-right">
            <button type="button" data-action="notification#hide" class="inline-flex justify-self-end rounded-md text-red-800 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
              <span class="sr-only">Close</span>
              <svg class="h-5 w-5 text-red-800" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>

          <div class="-mt-5 grid justify-items-center">
            <div class="flex justify-around text-sm font-medium">
              <div class="text-red-800">
                There was <%= pluralize(form.object.errors.count, "error") %> with your submission
              </div>
            </div>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 ml-5">
                <% form.object.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="inline-block w-full bg-gray-50 py-3">
      <div class="w-full grid place-items-center">
        <div class="mx-auto flex space-x-3">
          <div>
            <%= form.label :type, 'Type', class: "text-sm font-medium" %>
            <br>
            <%= form.select :type, PackagingMaterialDecorator.types_options, {}, { class: "w-full hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm"} %>
          </div>
          <div>
            <%= form.label :description, "Description", class: "w-full text-sm font-medium" %>
            <br>
            <%= form.text_field :description, class: "hover:cursor-pointer rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div>
            <br>
            <%= form.submit "Create packaging material", data: {turbo: false }, class: 'inline-flex text-sm hover:cursor-pointer justify-center rounded-md bg-indigo-600 py-2 px-3 font-medium text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</turbo-frame>
