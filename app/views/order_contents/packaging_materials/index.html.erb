<% content_for :page_heading_button do %>
  <%= render partial: "/layouts/stacked_shell/headings/buttons/back_btn_with_fallback", locals: {
    fallback_location: @order,
    fallback_location_text: "View order",
  } %>
<% end %>

<article>
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Packaging Materials</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all the users in your account including their name, title, email and role.</p>
    </div>
    <div class="sm:ml-16 sm:mt-0 sm:flex-none">
      <%= button_to(
        "Add packaging material",
        new_order_content_packaging_material_path(@order_content),
        method: :get,
        class:'block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'
      ) %>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <turbo-frame id="packaging_materials">
      <div>
        <!-- Dropdown menu on small screens -->
        <div class="sm:hidden mx-3">
          <label for="current-tab" class="sr-only">Select a tab</label>
          <select id="current-tab" name="current-tab" class="block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
            <option selected>All</option>
            <option>Boxes</option>
            <option>Crates</option>
            <option>Pallets</option>
          </select>
        </div>
        <!-- Tabs at small breakpoint and up -->
        <div class="hidden sm:block ml-3">
          <nav class="-mb-px flex space-x-8">
            <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
            <% current_tab_css = "border-indigo-500 text-indigo-600 whitespace-nowrap border-b-2 px-1 pb-4 text-sm font-medium" %>
            <% default_tab_css = "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 whitespace-nowrap border-b-2 px-1 pb-4 text-sm font-medium" %>
            <a href="#" class="text-base <%= current_tab_css %>">All</a>
            <a href="#" class="text-base <%= default_tab_css %>">Boxes</a>
            <a href="#" class="text-base <%= default_tab_css %>">Crates</a>
            <a href="#" class="text-base <%= default_tab_css %>">Pallets</a>
          </nav>
        </div>
      </div>
      <%#= turbo_frame_tag @packaging_materials do %>
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <table class="min-w-full divide-y divide-gray-300">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Order ID</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Packaging Material</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Delivered</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                  <span class="sr-only">Edit</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @packaging_materials.each do |packaging_material| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= packaging_material.order_content.id %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= packaging_material.model_name.human %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <div class="inline-block max-w-full">
                    <%= content_tag :span, packaging_material.description, class:'text-wrap' %>
                  </div>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  packaging_material.delivered?
                </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                  <%= link_to 'Edit', edit_packaging_material_path(packaging_material), target:"_top", class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
              <% end %>
              <!-- More people... -->
            </tbody>
          </table>
        </div>
      </div>
    </turbo-frame>
  </div>
</article>
