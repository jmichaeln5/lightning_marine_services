<div class="p-2">
  <%= link_to "Download All Orders", '#', "data-toggle" => "modal", 'data-target' => '#exportToCsv', class:'' %>
</div>

<!-- Modal -->
<div class="modal fade" id="exportToCsv" tabindex="-1" role="dialog" aria-labelledby="exportToCsvLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exportToCsvLabel">
          Download All Orders
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <%= link_to "Download(Excel)", orders_path(format: :xls) %>
          <br>
          <%= link_to "Download(CSV)", orders_path(format: :csv) %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
