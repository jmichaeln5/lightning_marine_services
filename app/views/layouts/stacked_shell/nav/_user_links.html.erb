<% user_links_css_classes = "" unless defined?(user_links_css_classes) %>
<% user_links_css_classes_current = "" unless defined?(user_links_css_classes_current) %>

<% if current_user %>
  <div class="<%= user_links_css_classes %> divide-y divide-gray-200 lg:py-1 rounded-none border-b border-gray-700 lg:border-gray-200">
    <div class="font-bold lg:text-center cursor-default">
      Hello <%= current_user.email %>
    </div>
  </div>

  <%= link_to "Admin Dashboard", admin_users_path, class: user_links_css_classes if current_user.has_role? :admin %>
  <%#= link_to "App Service Links", directory_links_path, class: user_links_css_classes if current_user.has_role? :admin %>

  <%#= link_to "Account Settings", edit_user_registration_path, class: user_links_css_classes_current if current_page?(edit_user_registration_path) %>
  <%#= link_to "Account Settings", edit_user_registration_path, class: user_links_css_classes if !current_page?(edit_user_registration_path) %>

  <%#= link_to "Logout", destroy_user_session_path, method: :delete, class: user_links_css_classes %>
  <div class="<%= user_links_css_classes %>">
  <%= button_to(
        "Logout",
        destroy_user_session_path,
        method: :delete,
      ) %>
  </div>

<% end %>

<% if !current_user %>
  <%= link_to "Home", root_path, class: user_links_css_classes_current if current_page?(root_path) %>
  <%= link_to "Home", root_path, class: user_links_css_classes if !current_page?(root_path) %>

  <%= link_to "Sign In", new_user_session_path, class: user_links_css_classes_current if current_page?(new_user_session_path) %>
  <%= link_to "Sign In", new_user_session_path, class: user_links_css_classes if !current_page?(new_user_session_path) %>
<% end %>
