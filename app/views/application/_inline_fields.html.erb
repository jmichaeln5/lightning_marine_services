<% if authorized_internal_user? %>
  <% frame_id = dom_id(form.object, "#{attribute}_turbo_frame") %>
  <%= turbo_frame_tag frame_id, class:"contents" do %>
    <%= tag.div class: "inline-block" do %>
      <%= tag.div yield %>
      <%= link_to "Cancel",
        polymorphic_path(form.object),
        class:"inline-action text-gray-400 hover:text-gray-500 decoration-gray-300 decoration-2" %>
      <%= form.button "Save", class:"inline-action text-gray-400 hover:text-gray-500 decoration-gray-300 decoration-2" %>
    <% end %>
  <% end %>
<% end %>
