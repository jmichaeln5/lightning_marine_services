<div class=" container -mt-8 mb-4">
  <br>
  <div class="float-right">
    <div class="">

      <% if controller_name.in? main_controllers  %>

          <div class="form-inline my-lg-0 p-3">
            <div class="row pb-2">
            <%= form_tag request.params.merge(q: nil), method: :get do %>
              <div class="row flex-nowrap">
              <%= text_field_tag :q, nil, placeholder: 'Search', class:'form-control mr-1' %>
              <%= submit_tag("Search", class:'btn btn-sm btn-outline-secondary ') %>
              </div>

            <% end %>
            <br>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

