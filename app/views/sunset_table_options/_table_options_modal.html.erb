<!-- Button trigger modal -->
<div class="btn btn-outline-primary" data-toggle="modal" data-target="#tableOptionsModal">
  Table Options: <%= current_controller.titleize%>
</div>
<div class=" text-gray-500 text-sm pt-2"> (Select what columns are displayed on Table)</div>

<!-- Modal -->
<div class="modal fade" id="tableOptionsModal" tabindex="-1" role="dialog" aria-labelledby="tableOptionsModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tableOptionsModalLabel">
          Table Options
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @form_table_option = TableOption.new unless @table_option.belongs_to_user? %>
        <% @form_table_option = @table_option if @table_option.belongs_to_user? %>
        <%= render 'table_options/form', table_option: @form_table_option %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
