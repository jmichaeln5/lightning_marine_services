      </div>
    <% end %>
    <%= render partial: "/shared/data_display/stats/overview_card", locals: {
      card_title: "Vendors",
      card_description: "#{Vendor.all.count} vendors",
      card_link: (link_to "View all vendors", vendors_path, class:"font-medium text-cyan-700 hover:text-cyan-900"),
      card_icon: yield(:ship_icon),
    } %>
  </div>
</section>
