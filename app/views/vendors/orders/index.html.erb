              <% table_header_css_classes = "table-cell px-1 text-sm font-bold text-center" %>
              <% sort_link_to_tc_css_classes = "#{table_header_css_classes} text-indigo-800 hover:text-indigo-900 hover:underline" %>

              <%= content_tag(:div, " ", class: table_header_css_classes ) if current_user_is_admin_or_staff? %>
